generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  role      Role     @default(OPERATOR)
  password  String   // hashed in production
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  activities ActivityLog[]
}

enum Role {
  ADMIN
  OPERATOR
  WORKER
  CLEANER
}

model Location {
  id          Int       @id @default(autoincrement())
  name        String
  address     String?
  description String?
  capacity    Int?
  metadata    String?   // JSON as string for flexibility
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tasks       Task[]
  activities  ActivityLog[]
}

model Task {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  location    Location  @relation(fields: [locationId], references: [id])
  locationId  Int
  assignedTo  User?     @relation(fields: [assignedToId], references: [id])
  assignedToId Int?
  status      TaskStatus @default(PENDING)
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

model ActivityLog {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  location   Location @relation(fields: [locationId], references: [id])
  locationId Int
  type       String   // e.g., "checkin", "maintenance", "linen_change"
  metadata   String?  // JSON
  timestamp  DateTime @default(now())
}

model Flow {
  id        Int       @id @default(autoincrement())
  name      String
  role      Role
  steps     FlowStep[]
  createdAt DateTime  @default(now())
}

model FlowStep {
  id        Int     @id @default(autoincrement())
  flow      Flow    @relation(fields: [flowId], references: [id])
  flowId    Int
  order     Int
  title     String
  detail    String?
}

model Linen {
  id         Int      @id @default(autoincrement())
  location   Location @relation(fields: [locationId], references: [id])
  locationId Int
  type       String
  quantity   Int      @default(0)
  updatedAt  DateTime @updatedAt
}

model Maintenance {
  id          Int      @id @default(autoincrement())
  location    Location @relation(fields: [locationId], references: [id])
  locationId  Int
  title       String
  description String?
  reportedBy  User?    @relation(fields: [reportedById], references: [id])
  reportedById Int?
  status      String   @default("open")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Emergency {
  id          Int      @id @default(autoincrement())
  location    Location @relation(fields: [locationId], references: [id])
  locationId  Int
  title       String
  description String?
  reportedAt  DateTime @default(now())
}
